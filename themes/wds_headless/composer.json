{
	"name": "webdevstudios/headless-theme",
	"description": "A WordPress theme to power a Next.js frontend.",
	"type": "project",
	"license": "GPL-3.0-or-later",
	"authors": [
		{
			"name": "WebDevStudios",
			"email": "contact@webdevstudios.com"
		}
	],
	"require": {
		"composer/installers": "^1.5"
	},
	"require-dev": {
		"phpcompatibility/php-compatibility": "~9.3",
		"webdevstudios/php-coding-standards": "~1.3.0"
	},
	"scripts": {
		"lint": [
			"@composer run compat",
			"@composer run lint:php"
		],
		"format": "@php ./vendor/bin/phpcbf -p -v . --standard=.phpcs.xml.dist --extensions=php --report-summary --report-source --ignore='*/node_modules/*,*/vendor/*,*/dist/*'",
		"lint:php": "@php ./vendor/bin/phpcs -p -s -n . --standard=.phpcs.xml.dist --extensions=php -n --colors --ignore='*/node_modules/*,*/vendor/*,*/dist/*'",
		"compat": "@php ./vendor/bin/phpcs -p . --standard=PHPCompatibility --extensions=php --runtime-set testVersion 7.4 --ignore='.github/*,vendor/*' --warning-severity=8 -d memory_limit=4096M || true || exit",
		"debug:phpcs": "which phpcs && phpcs -i"
	},
	"config": {
		"platform": {
			"php": "7.4"
		}
	}
}
